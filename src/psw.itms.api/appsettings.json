{
  "ConnectionStrings": {
    "ConnectionString": "Server=localhost;Initial Catalog=TARP;User ID=sa;Password=@Password1;",
    "IdentityServerConnection": "Server=mssqldb;Initial Catalog=TEMP;User ID=sa;Password=@Password1;"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "RabbitMqConfig": {
    "HostName": "172.17.0.3",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "UseConsulDev": "true",
  "ConsulOptions": {
    "ConsulAddress": "http://consul:8500",
    "ServiceAddress": "http://tarp:5002",
    "ServiceName": "TarpService",
    "DisableAgentCheck": true,
    "Tags": []
  },
  "SinkFactory": {
    "IsRollingFile": true,
    "IsApplicationInsights": false,
    "IsConsole": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId", 
      "WithCaller", 
      "WithDemystifiedStackTraces", 
      "WithCorrelationId"
    ],
    "Properties": {
      "ApplicationName": "TARP"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] | Thread: {ThreadId,2} | Machine: {MachineName} | {CorrelationId} {Message:l}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "../tmp/psw_logs/TARP/TARP_.log",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] | Thread: {ThreadId,2} | Machine: {MachineName} | {CorrelationId} {Message:l}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "shared": false,
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}
